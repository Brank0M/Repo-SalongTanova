              .home_map_img_box
                img(src='../map/st_map.png', alt='map')
              .home_map_logo
                .home_map_logo_box
                  img(src="../logo/st_logo.png", alt="Salong Tanova")

        .home_section_6
          .home_section_about
            .home_about_btn 
              .home_about_btn_box 
                a.button(href='/about')
