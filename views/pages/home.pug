extends ../index.pug

block variables
  - var template = 'home'

block content

    .home
      .home_div
        .home_section_1
          .home_section_work 
            .home_btn_work 
              a.button(href='/work')
                h3.text1 Instagram
          .home_video
            video(src='../videos/video32.mp4', type='video/mp4', onClick='this.play(autoplay=true, muted=true, loop=true)')
            .home_btn_call 
              a.button(href='tel:123-456-7890')
                h3 Ring upp

        .home_section_2
          .home_section_content 
            .home_slide_title
              .home_title_box 
                h3 Achieve your dream look 
            .home_slide_btn
              a.button
                img.btn_arrow(src="../logo/Combined Shape.svg", alt="arrow")
            .home_slide_text
              .home_text_box 
                h3 Image it and we will make it happen
          .home_slide_slider#canvas
            each image in ['../images/img1.jpg', '../images/img3.jpg', '../images/img8.jpg']
              .home_slider_box.fade
                img(src=image, alt='slider')

        .home_section_3
          .home_section_switch
            .home_switch_img
              .home_switch_img_box
                img.active(src='../images/img2.jpg', alt='woman')
                img(src='../images/img4.jpg', alt="man")
              .home_switch_btn
                a.button.woman(active) Woman
                a.button.man
            .home_switch_title
              .home_switch_title_box
                img(src="../logo/logo_small.png", alt="Salong Tanova")

        .home_section_4
          .home_section_keune 
            .home_keune_slider
              .home_keune_slider_box
                img.slide(src='../images/reklam1.png', alt='keune')
                img.slide(src='../images/reklam2.png', alt='keune')
                img.slide(src='../images/reklam3.png', alt='keune')
